#!/bin/bash

############################################################################################
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Kernel Source:
# git clone https://github.com/yesimxev/android_kernel_oppo_msm8974 -b lineage-18.1
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
############################################################################################

##############################################
# Toolchains
##############################################

# Clang
unset CLANG_ROOT
unset CLANG_PATH
unset CLANG_SRC
unset LD_LIBRARY_PATH
unset CLANG_TRIPLE
unset CC
unset CLANG_SRC

# GCC 64bit
unset CROSS_COMPILE_SRC

# Enable ccache to speed up compilation
CCACHE=true

# GCC 32bit
## armhf cross compiler directory:
#CCD32="${TD}/armhf-linaro-4.9"
export CROSS_COMPILE=/root/android/toolchains/toolchain-arm-4.9/bin/arm-linux-androideabi-
#${CCD32}/bin/arm-linux-gnueabihf-
#export CROSS_COMPILE_ARM32=${CCD32}/bin/arm-linux-gnueabihf-
## Source repository:
CROSS_COMPILE_ARM32_SRC="https://images.kali.org/nethunter/toolchains/linaro-armhf-4.9.tar.xz"
CROSS_COMPILE_ARM32_TYPE="wget"

# Additional compiler arguments
MAKE_ARGS="CONFIG_NO_ERROR_ON_MISMATCH=y"

# Architecture
export ARCH=arm

# Image
##IMAGE_NAME=zImage-dtb

# Path to compiled kernel image
#KERNEL_IMAGE=$BUILD_DIR/out/arch/arm/boot/$IMAGE_NAME

# Kernel local name
export LOCALVERSION=-NetHunter-18.1-yesimxev

